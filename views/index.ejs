<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Personal Inventory</title>
    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <!-- Custom CSS -->
		<link rel="stylesheet" href="/style.css">
  </head>
  <body>
    <div class="container">
      <div class="title my-4">
        <h1>My Personal Inventory</h1>
        <span>Imari Joy C. Borda</span>
      </div>
      <div class="controls d-flex my-3 g-2">
        <button type="button" id="addItemButton" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addItem">Add Item</button>
        <div class="input-group mb-3">
          <input type="text" class="form-control" placeholder="Search item" aria-label="Search item" aria-describedby="button-addon2">
          <button class="btn btn-outline-secondary" type="button" id="button-addon2">Search</button>
        </div>
      </div>
      <div class="item-list">
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Image</th>
              <th scope="col">Name</th>
              <th scope="col">Brand</th>
              <th scope="col">Price</th>
              <th scope="col">Date Acquired</th>
              <th scope="col">Location Acquired</th>
              <th scope="col">Condition</th>
              <th scope="col">Tags</th>
              <th scope="col">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% for (var i = 0; i < items.length; i++) { %>
              <tr id="id-<%= items[i]._id %>">
                <th scope="row"><%= i + 1 %></th>
                <td>
                  <div class="img-holder">
                    <img class="img-control" src="uploads/images/<%= items[i].image %>" alt="Image">
                  </div>
                </td>
                <td><%= items[i].title %></td>
                <td><%= items[i].brand %></td>
                <td>Php <%= items[i].price %></td>
                <td><%= items[i].dateAcquired %></td>
                <td><%= items[i].placeAcquired %></td>
                <td><%= items[i].condition %></td>
                <td><%= items[i].tags.join(', ') %></td>
                <td>
                  <button type="button" item-id="<%= items[i]._id %>" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#updateItem">Edit</button>
                  <button type="button" item-id="<%= items[i]._id %>" class="btn btn-danger deleteBtn">Delete</button>
                </td>
              </tr>
            <% } %>   
          </tbody>
        </table>
      </div>
    </div>

    <!-- Add Item Modal -->
    <div class="modal fade" id="addItem" tabindex="-1" aria-labelledby="addItemModal" aria-hidden="true">
      <div class="modal-dialog modal-dialog-scrollable">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="addItemLabel">Add Item</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <form id="addItemForm" action="/addItem" method="POST" enctype="multipart/form-data">
              <div class="mb-3">
                <div class="img-holder m-auto">
                  <img class="img-control" src="https://via.placeholder.com/200x150?text=Upload+Image" alt="Image">
                </div>
              </div>
              <div class="mb-3">
                <label for="addImage" class="form-label">Image</label>
                <input required class="form-control" type="file" name="addImage" id="addImage">
              </div>
              <div class="mb-3">
                <label for="addName" class="form-label">Name</label>
                <input required class="form-control" type="text" name="addName" id="addName">
              </div>
              <div class="mb-3">
                <label for="addBrand" class="form-label">Brand</label>
                <input required class="form-control" type="text" name="addBrand" id="addBrand">
              </div>
              <div class="mb-3">
                <label for="addPrice" class="form-label">Price (PHP)</label>
                <input required class="form-control" type="number" name="addPrice" id="addPrice">
              </div>
              <div class="mb-3">
                <label for="addDateAcquired" class="form-label">Date Acquired</label>
                <input required class="form-control" type="date" name="addDateAcquired" id="addDateAcquired">
              </div>
              <div class="mb-3">
                <label for="addLocationAcquired" class="form-label">Location Acquired</label>
                <input required class="form-control" type="text" name="addLocationAcquired" id="addLocationAcquired">
              </div>
              <div class="mb-3">
                <label for="addCondition" class="form-label">Condition</label>
                <select required class="form-select" name="addCondition" id="addCondition">
                  <option selected>Open this select menu</option>
                  <option value="excellent">Excellent</option>
                  <option value="good">Good</option>
                  <option value="broken">Broken</option>
                  <option value="gifted">Gifted</option>
                </select>
              </div>
              <div class="mb-3">
                <label for="addTags" class="form-label">Tags</label>
                <input required class="form-control" type="text" name="addTags" id="addTags">
              </div>
            </form>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <input required type="submit" form="addItemForm" value="Add Item" class="btn btn-primary">
          </div>
        </div>
      </div>
    </div>

    <!-- Update Item Modal -->
    <div class="modal fade" id="updateItem" tabindex="-1" aria-labelledby="addItemModal" aria-hidden="true">
      <div class="modal-dialog modal-dialog-scrollable">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="addItemLabel">Add Item</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <div class="mb-3">
              <div class="img-holder m-auto">
                <img class="img-control" src="https://picsum.photos/seed/3/200/150" alt="Image">
              </div>
            </div>
            <div class="mb-3">
              <label for="formFile" class="form-label">Image</label>
              <input class="form-control" type="file" id="formFile" required>
            </div>
            <div class="mb-3">
              <label for="textInput" class="form-label">Name</label>
              <input class="form-control" type="text" id="textInput" required>
            </div>
            <div class="mb-3">
              <label for="textInput" class="form-label">Brand</label>
              <input class="form-control" type="text" id="textInput" required>
            </div>
            <div class="mb-3">
              <label for="textInput" class="form-label">Price (PHP)</label>
              <input class="form-control" type="number" id="textInput" required>
            </div>
            <div class="mb-3">
              <label for="textInput" class="form-label">Date Acquired</label>
              <input class="form-control" type="date" id="textInput" required>
            </div>
            <div class="mb-3">
              <label for="textInput" class="form-label">Location Acquired</label>
              <input class="form-control" type="text" id="textInput">
            </div>
            <div class="mb-3">
              <label for="textInput" class="form-label">Condition</label>
              <input class="form-control" type="text" id="textInput" required>
            </div>
            <div class="mb-3">
              <label for="textInput" class="form-label">Tags</label>
              <input class="form-control" type="text" id="textInput" required>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="button" class="btn btn-warning">Confirm</button>
          </div>
        </div>
      </div>
    </div>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
    <!-- Custom JS -->
		<script type="text/javascript" src="/main.js"></script>
  </body>
</html>